<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/client/css/spectatorLobby.css">
    <title>Čichalov 2022 | Spectator</title>

    <script src="https://kit.fontawesome.com/9e581aa109.js" crossorigin="anonymous"></script>

    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="row">
        <div class="sec">
            
        </div>
        <div class="sec">
            <div class="title">
                <h1>ČICHALOV 2023</h1>
                <img src="/client/assets/background.png">
            </div>
        </div>
        <div class="sec">
            <h2 class="title-sec">Nominované týmy:</h2>
            <div id="teamList">
                <h1 class="waiting">Čekání na přidání týmů...</h1>
            </div>
        </div>
    </div>
    <div class="row">
        
    </div>
</body>

<script>
       var socket = io();

       var teamList = document.getElementById("teamList");

       socket.on('teamsReg', function(data){
            teamList.innerHTML = "";
            for(var i = 0; i < data.length; i++){
                teamList.innerHTML = teamList.innerHTML + "<div class='team' onclick='teamSelected(" + i + ")'><div class='logo'><h1>" + (data[i].teamName[0]).toUpperCase() + "</h1></div><h1 class='titleTeam'>" + data[i].teamName + "</h1><div class='under'></div><div class='players'><h2 class='player'>" + data[i].playerOneName + "</h2><h2 class='player'>" + data[i].playerTwoName + "</h2></div></div>";
            }
       });


</script>
</html>